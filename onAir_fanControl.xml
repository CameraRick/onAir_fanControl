<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>onAir_fanControl</Name>
  <Repository>camerarick/onair_fancontrol</Repository>
  <Registry>https://hub.docker.com/r/camerarick/onair_fancontrol</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>true</Privileged>
  <Support>https://forums.unraid.net/topic/196460-support-onair-fancontrol-a-smart-fan-controller</Support>
  <Project>https://github.com/CameraRick/onAir_fanControl</Project>
  <Overview>a Docker to send realtime HDD temp-data to drive a custom PWM fan controller over MQTT (incl templates to make your own controller with ESPHome)</Overview>
  <Category>Tools:System Utilities:</Category>
  <WebUI>http://[IP]:[PORT:3590]/</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/CameraRick/onAir_fanControl/main/img/onAir_fanControl_logo.png</Icon>
  <ExtraParams>--restart unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Description>a Docker to send realtime HDD temp-data to drive a custom PWM fan controller over MQTT (incl templates to make your own controller with ESPHome)</Description>
  <Requires>access to an MQTT Broker and a custom-built ESP controller node (see GitHub repo (https://github.com/CameraRick/onAir_fanControl) for instructions and ESPHome template).</Requires>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>3590</HostPort>
        <ContainerPort>8088</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/onair_fancontrol</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/var/local/emhttp</HostDir>
      <ContainerDir>/host</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/dev</HostDir>
      <ContainerDir>/dev</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value/>
      <Name>TZ</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Config Name="WebUI" Target="8088" Default="3590" Mode="tcp" Description="WebUI" Type="Port" Display="always" Required="true" Mask="false">3590</Config>
  <Config Name="config" Target="/config" Default="/mnt/user/appdata/onair_fancontrol" Mode="rw" Description="" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/onair_fancontrol</Config>
  <Config Name="disk info" Target="/host" Default="/var/local/emhttp" Mode="ro" Description="access to disks.ini for spundown status and temps (backup)" Type="Path" Display="always" Required="true" Mask="false">/var/local/emhttp</Config>
  <Config Name="SMART info" Target="/dev" Default="/dev" Mode="ro" Description="access to SMART data via ´smartctl -n standby -A´ for real-time temp-data (disks.ini contains cached information)." Type="Path" Display="always" Required="false" Mask="false">/dev</Config>
  <Config Name="timezone" Target="TZ" Default="" Mode="" Description="your timezone (e.g. Europe/Berlin, see here: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones). Leave empty to use unRAID system time." Type="Variable" Display="always" Required="false" Mask="false"/>
</Container>

